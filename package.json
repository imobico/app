{
  "name": "@imoblr/monorepo",
  "private": true,
  "license": "MIT",
  "version": "3.0.0",
  "scripts": {
    "ios": "cd apps/mobile && bun ios",
    "android": "cd apps/mobile && bun android",
    "dev:web": "turbo dev --parallel --filter={@imoblr/web-app,@imoblr/ui}",
    "native": "cd apps/mobile && bun dev",
    "native:prod": "cd apps/mobile && bun dev:prod",
    "build": "cd packages/ui && tamagui-build",
    "build:web": "turbo build --parallel --filter={@imoblr/web-app,@imoblr/ui,@repo/config}",
    "build:ios": "cd apps/mobile && bun build:ios",
    "build:android": "cd apps/mobile && bun build:android",
    "build:ios:preview": "cd apps/mobile && bun build:ios:preview",
    "build:android:preview": "cd apps/mobile && bun build:android:preview",
    "submit:android": "cd apps/mobile && eas submit --platform android --path ./app-release.aab",
    "check-deps": "check-dependency-version-consistency .",
    "check-types": "tsc --noEmit",
    "format": "bun x @biomejs/biome format --write ./packages ./apps",
    "lint": "bun x @biomejs/biome lint ./packages ./apps",
    "fix": "bun x @biomejs/biome check --apply-unsafe ./packages ./apps",
    "deps:fix": "manypkg fix",
    "deps:update": "bun x npm-check-updates -ui -ws",
    "postinstall": "bun run build && bun check-deps && bun format",
    "clean": "git clean -xdf node_modules && rm -f bun.lockb && rm -rf ./apps/web/.next && rm -rf ./apps/web/.tamagui && rm -rf ./apps/web/node_modules && rm -rf ./packages/ui/dist"
  },
  "workspaces": ["apps/*", "packages/*"],
  "dependencies": {
    "@babel/runtime": "^7.23.2",
    "@biomejs/biome": "1.3.3",
    "@manypkg/cli": "^0.21.0",
    "@nderscore/tamagui-typescript-plugin": "^0.6.0",
    "check-dependency-version-consistency": "^4.1.0",
    "npm-run-all": "^4.1.5",
    "react-native-url-polyfill": "^2.0.0",
    "typescript": "^5.2.2",
    "workerd": "1.20231218.0"
  }
}
