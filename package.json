{
  "name": "@imoblr/monorepo",
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "5.3.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.3",
    "dotenv-cli": "^7.4.2",
    "lefthook": "^1.6.10",
    "syncpack": "^12.3.2",
    "turbo": "1.13.4-canary.4"
  },
  "packageManager": "bun@1.1.7",
  "private": true,
  "scripts": {
    "android": "bun dotenv -c -- turbo dev:android --parallel --filter={@imoblr/mobile-app,@imoblr/ui}",
    "android:go": "bun dotenv -c -- turbo dev:android:go --parallel --filter={@imoblr/mobile-app,@imoblr/ui}",
    "build": "cd packages/ui && tamagui-build",
    "build:android": "cd apps/mobile && bun build:android",
    "build:android:preview": "cd apps/mobile && bun build:android:preview",
    "build:ios": "cd apps/mobile && bun build:ios",
    "build:ios:preview": "cd apps/mobile && bun build:ios:preview",
    "build:web": "bun run build --parallel --filter={@imoblr/web-app,@imoblr/ui,@imoblr/config}",
    "fix-deps": "bun syncpack fix-mismatches",
    "check-deps": "bun syncpack list-mismatches",
    "check-types": "tsc --noEmit",
    "clean": "git clean -xdf node_modules && rm -f bun.lockb && bun run clean:web && bun run clean:mobile && rm -rf ./packages/ui/dist",
    "clean:mobile": "rm -rf ./apps/mobile/{.expo,android,ios,node_modules}",
    "clean:web": "rm -rf ./apps/web/{.next,.tamagui,node_modules}",
    "deps:update": "bunx syncpack update",
    "desktop": "",
    "fix": "bunx @biomejs/biome check --apply-unsafe ./packages ./apps",
    "format": "bunx @biomejs/biome format --write ./packages ./apps",
    "ios": "bun dotenv -c -- turbo dev:ios --parallel --filter={@imoblr/mobile-app,@imoblr/ui}",
    "ios:go": "bun dotenv -c -- turbo dev:ios:go --parallel --filter={@imoblr/mobile-app,@imoblr/ui}",
    "lint": "bunx @biomejs/biome lint ./packages ./apps",
    "postinstall": "bun run check-deps",
    "prepare": "lefthook install",
    "web": "bun dotenv -c -- turbo dev:web"
  },
  "trustedDependencies": ["@biomejs/biome", "@swc/core", "esbuild", "lefthook"],
  "workspaces": ["./apps/*", "./packages/*"]
}
