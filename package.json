{
  "name": "@imoblr/monorepo",
  "private": true,
  "license": "MIT",
  "version": "3.0.0",
  "scripts": {
    "dev:desktop": "",
    "dev:web": "bunx turbo dev --parallel --filter={@imoblr/web-app,@imoblr/ui}",
    "dev:ios": "bunx turbo dev:ios --parallel --filter={@imoblr/mobile-app,@imoblr/ui}",
    "dev:android": "bunx turbo dev:android --parallel --filter={@imoblr/mobile-app,@imoblr/ui}",
    "build": "cd packages/ui && tamagui-build",
    "build:web": "bunx turbo build --parallel --filter={@imoblr/web-app,@imoblr/ui,@repo/config}",
    "build:ios": "cd apps/mobile && bun build:ios",
    "build:android": "cd apps/mobile && bun build:android",
    "build:ios:preview": "cd apps/mobile && bun build:ios:preview",
    "build:android:preview": "cd apps/mobile && bun build:android:preview",
    "check-deps": "check-dependency-version-consistency .",
    "check-types": "tsc --noEmit",
    "format": "bunx @biomejs/biome format --write ./packages ./apps",
    "lint": "bunx @biomejs/biome lint ./packages ./apps",
    "fix": "bunx @biomejs/biome check --apply-unsafe ./packages ./apps",
    "deps:update": "bunx npm-check-updates -ui -ws",
    "postinstall": "bun run build && bun check-deps && bun format",
    "clean": "git clean -xdf node_modules && rm -f bun.lockb && rm -rf ./apps/web/.next && rm -rf ./apps/web/.tamagui && rm -rf ./apps/web/node_modules && rm -rf ./packages/ui/dist"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@babel/runtime": "^7.24.1",
    "@biomejs/biome": "1.3.3",
    "@nderscore/tamagui-typescript-plugin": "^0.6.0",
    "check-dependency-version-consistency": "^4.1.0",
    "npm-run-all": "^4.1.5",
    "react-native-url-polyfill": "^2.0.0",
    "typescript": "^5.4.3",
    "workerd": "1.20231218.0"
  }
}
