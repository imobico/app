{
  "name": "imoblr-app",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:web": "turbo build --parallel --filter={imoblr-web,@repo/ui,@repo/config}",
    "dev:web": "turbo dev --parallel --filter={imoblr-web,@repo/ui,@repo/config}",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "prettier": "^3.2.5",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "bun@1.0.33",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
